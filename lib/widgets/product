// Separate widget for animated stock icon
class AnimatedStockIcon extends StatefulWidget {
  final int stockQuantity;

  const AnimatedStockIcon({
    Key? key,
    required this.stockQuantity,
  }) : super(key: key);

  @override
  State<AnimatedStockIcon> createState() => _AnimatedStockIconState();
}

class _AnimatedStockIconState extends State<AnimatedStockIcon>
    with SingleTickerProviderStateMixin {
  late AnimationController _animationController;
  late Animation<double> _scaleAnimation;
  late Animation<double> _pulseAnimation;

  @override
  void initState() {
    super.initState();
    _animationController = AnimationController(
      duration: Duration(
        seconds: widget.stockQuantity == 0 ? 1 : 2,
      ),
      vsync: this,
    );

    _scaleAnimation = Tween<double>(
      begin: 0.8,
      end: 1.2,
    ).animate(CurvedAnimation(
      parent: _animationController,
      curve: Curves.easeInOut,
    ));

    _pulseAnimation = Tween<double>(
      begin: 0.0,
      end: 1.0,
    ).animate(CurvedAnimation(
      parent: _animationController,
      curve: Curves.easeInOut,
    ));

    _animationController.repeat(reverse: true);
  }

  @override
  void dispose() {
    _animationController.dispose();
    super.dispose();
  }

  @override
  Widget build(BuildContext context) {
    Color iconColor = widget.stockQuantity > 10
        ? Colors.green[600]!
        : widget.stockQuantity > 0
            ? Colors.orange[600]!
            : Colors.red[600]!;

    Color backgroundColor = widget.stockQuantity > 10
        ? Colors.green.withOpacity(0.15)
        : widget.stockQuantity > 0
            ? Colors.orange.withOpacity(0.15)
            : Colors.red.withOpacity(0.15);

    return AnimatedBuilder(
      animation: _animationController,
      builder: (context, child) {
        return Transform.scale(
          scale: _scaleAnimation.value,
          child: Container(
            padding: const EdgeInsets.all(6),
            decoration: BoxDecoration(
              borderRadius: BorderRadius.circular(10),
              color: backgroundColor,
              boxShadow: [
                BoxShadow(
                  color: iconColor.withOpacity(0.3),
                  blurRadius: 6,
                  offset: const Offset(0, 3),
                  spreadRadius: 1,
                ),
              ],
            ),
            child: Stack(
              children: [
                Icon(
                  Icons.inventory_2,
                  size: 18,
                  color: iconColor,
                ),
                // Pulsing ring effect for low/out of stock
                if (widget.stockQuantity <= 10)
                  Positioned.fill(
                    child: CustomPaint(
                      painter: RingPainter(
                        animation: _pulseAnimation,
                        color: iconColor.withOpacity(
                          widget.stockQuantity == 0 ? 0.8 : 0.6,
                        ),
                        strokeWidth: 2,
                      ),
                    ),
                  ),
              ],
            ),
          ),
        );
      },
    );
  }
}

// Custom painter for pulsing ring effect
class RingPainter extends CustomPainter {
  final Animation<double> animation;
  final Color color;
  final double strokeWidth;

  RingPainter({
    required this.animation,
    required this.color,
    required this.strokeWidth,
  });

  @override
  void paint(Canvas canvas, Size size) {
    final center = Offset(size.width / 2, size.height / 2);
    final radius = (size.width / 2) * animation.value;
    
    final paint = Paint()
      ..color = color
      ..strokeWidth = strokeWidth
      ..style = PaintingStyle.stroke;
    
    canvas.drawCircle(center, radius, paint);
  }

  @override
  bool shouldRepaint(RingPainter oldDelegate) {
    return animation != oldDelegate.animation || color != oldDelegate.color || strokeWidth != oldDelegate.strokeWidth;
  }
}